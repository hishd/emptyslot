<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_four"
    tools:context=".activity_public_parking">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/public_parking_slot"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/txtParkingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Name of Parking"
            android:textColor="@color/sign_up_edit_texts_tint_text_headings"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_back" />

        <TextView
            android:id="@+id/txtParkingCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtParkingName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="General"
            android:textColor="#15D547"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgParkingLot"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/layout_top"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/layout_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgParkingLot"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <LinearLayout
            android:id="@+id/layout_total_spaces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/public_total_parking_round"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Parking Spaces available"
                android:textColor="@color/sign_up_edit_texts_tint_text_headings"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtTotalSpaces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55"
                android:textColor="@color/sign_up_edit_texts_tint_text_headings"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_middle"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parking Name :"
            android:textColor="@color/sign_up_edit_texts_tint_text_headings"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtParkingNameCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/txt1"
            android:text="Parking Lot 001"
            android:textColor="@color/sign_up_edit_texts_tint_text_headings"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1"
            android:layout_marginTop="15dp"
            android:text="Landmarks :"
            android:textColor="@color/sign_up_edit_texts_tint_text_headings"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLandmarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/txt2"
            android:text="Landmarks of Parking"
            android:textColor="@color/sign_up_edit_texts_tint_text_headings"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2"
            android:layout_marginTop="15dp"
            android:text="Smart Parking Area :"
            android:textColor="@color/sign_up_edit_texts_tint_text_headings"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtSmartParkingArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/txt"
            android:text="No"
            android:textColor="@color/sign_up_edit_texts_tint_text_headings"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt"
            android:layout_marginTop="20dp"
            android:text="Special Information :"
            android:textColor="@color/sign_up_edit_texts_tint_text_headings"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtSpecialInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt4"
            android:layout_marginTop="15dp"
            android:text="Special Information about the private parking lot."
            android:textColor="@color/sign_up_edit_texts_tint_text_headings"
            android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/view_what_is_temp_parking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnNavigate"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:autoLink="all"
        android:linksClickable="false"
        android:selectAllOnFocus="false"
        android:text="@string/add_public_parking_what_is_temporary_parking"
        android:textColor="@color/sign_up_edit_texts_tint_text_headings"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnNavigate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#047C8D"
        android:text="Navigate"
        android:textColor="@color/sign_up_edit_texts_tint_text_headings" />


</RelativeLayout>