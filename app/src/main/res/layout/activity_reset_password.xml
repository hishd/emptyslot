<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingTop="20dp"
tools:context=".activity_reset_password"
android:background="#21254A"
android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.airbnb.lottie.LottieAnimationView
            app:lottie_fileName="forgot_password.json"
            android:id="@+id/animationViewIntro"
            android:scaleType="centerInside"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTop"
        android:orientation="vertical"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:textColor="@color/sign_up_edit_texts_tint_text_headings"
            android:textSize="20sp"
            android:id="@+id/txtForgotPassSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/reset_password_caption_heading"/>

        <TextView
            android:textColor="@color/sign_up_edit_texts_tint_text_headings"
            android:layout_marginTop="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/reset_password_caption_1"/>

        <TextView
            android:textColor="@color/sign_up_edit_texts_tint_text_headings"
            android:textAlignment="center"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_password_caption_2"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutMiddle"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:textColor="@color/sign_up_edit_texts_tint_text_headings"
            android:backgroundTint="@color/sign_up_edit_texts_tint_text_headings"
            android:textColorHint="@color/sign_up_edit_texts_hint"
            android:id="@+id/txtEmail"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reset_password_email"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:background="@drawable/sign_up_button_round"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset_password_submit"/>

    </RelativeLayout>

</LinearLayout>